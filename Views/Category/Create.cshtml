@model CategoryViewModel
@{
    ViewData["Title"] = "Categories";
}

<div class="page-content">
   
    <div class="page-header">
        <div class="row">
            <div class="col-md-12">
                <h1>Create New Category</h1>
            </div>
        </div>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-body" style="padding: 30px">
                    <form method="POST" asp-action="Store" class="form-horizontal" enctype="multipart/form-data">
                        <div class="row">
                            <div class="form-group">
                                <label for="Name" class="col-sm-3">Category Name</label>
                                <div class="col-sm-9">
                                    <input id="Name" type="text" placeholder="Name" name="Name" class="form-control" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group col-md-12 has-float-label input-group">
                                <label for="Image" class="col-sm-3">Image</label>
                                <div class="col-sm-9">
                                    <input id="Image" type="file" placeholder="Image" name="Image" class="form-control" />
                                    <span asp-validation-for="Image"></span>
                                </div>
                            </div>

                            <div class="form-group col-md-12 has-float-label input-group">
                                <label for="CategoryId" class="col-sm-3">Parent Category</label>
                                <div class="col-sm-9">
                                    <select class="form-group" asp-for="CategoryId">
                                        <option >Parent Category</option>
                                        @foreach (var i in (ViewBag.Categories))
                                        {
                                            <option value="@i.Id"> @i.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId"></span>
                                </div>
                            </div>
                            <input type="submit" class="btn-primary btn-xs btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.page-content -->



}