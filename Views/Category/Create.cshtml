@{
    ViewData["Title"] = "Categories";
}

<div class="page-content">

    <div class="page-header">
        <div class="row">
            <div class="col-md-12">
                <h1>Create New Category</h1>
            </div>
        </div>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <form method="POST" asp-action="Store">
                        <div class="row">
                            <div class="form-group col-md-12 has-float-label input-group">
                                <input id="name" type="text" placeholder="Name" name="Name" class="form-control" />
                                <label for="name" class="">Name<span class="astric">*</span></label>
                            </div>
                            <div class="form-group col-md-12 has-float-label input-group">
                                <input type="file" placeholder="Image" name="Image" class="form-control" />
                            </div>
                            <input type="submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.page-content -->



}