@{
    ViewData["Title"] = "Categories";
}

<div class="page-content">

    <div class="page-header">
        <div class="row">
            <div class="col-md-4">
                <h1>Categories</h1>
            </div>
            <div class="col-md-3">

            </div>
            <div class="col-md-3"></div>
             <div class="col-md-2">
                <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-primary btn-block btn-add"><i class="fa fa-plus"></i> Add New Category</a>
            </div>
         </div>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <table id="new-table" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="center">Name</th>
                    <th class="center">Image</th>
                    <th class="center">Control</th>
                </tr>
                </thead>
            </table>
        </div>
    </div><!-- /.row -->
</div><!-- /.page-content -->


@section Scripts
{


    <script>

        $('#new-table').DataTable({
            processing: true,
            serverSide: true,
            filter: true,
            ajax: {
                url: '/api/category',
                method: 'POST',
                dataSrc: 'data',
                dataType: 'json'
            },
            columns: [
                {
                    data: 'name',
                    name: 'Name'
                },

                {
                    data: 'Image', name: 'Image',
                    "render": function (data, type, full) {
                        var image = '';
                        
                            image += '<img style="max-height: 90px; max-width: 90px;" src="Uploads/' + full.image + '">';
                    
                        return image;
                    }
                }
                ,{
                    data: "Control",
                    name: "Control",
                    "render":function(data,type,full) {
                        var result = '';
                        result += '<a href="/category' + full.id + '/edit' + '" class="btn btn-primary">' +
                            ' <span class="glyphicon glyphicon-edit"></span></a>';
                        result += '<button data-id="' + full.id + '"class="btn btn-danger ajax-btn" data-link="' + full.id + '">' +
                            ' <span class="glyphicon glyphicon-trash"></span></button>';
                        return result;
                    }
                }
                

            ]
        });

    </script>
    



}