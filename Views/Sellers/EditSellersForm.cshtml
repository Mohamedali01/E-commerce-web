@model EditUserFormViewModel
@{
    ViewData["Title"] = "Edit Sellers Form";
}

<div class="row" style="margin-top: 20px">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <form class="form-horizontal" role="form" method="post" asp-action="EditSeller">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" asp-for="Email"></label>
                <div class="col-sm-9 validation-message">
                    <input type="email" class="col-xs-10 col-sm-5" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" asp-for="FirstName"></label>
                <div class="col-sm-9 validation-message">
                    <input type="text" class="col-xs-10 col-sm-5" asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" asp-for="LastName"></label>
                <div class="col-sm-9 validation-message">
                    <input type="text" class="col-xs-10 col-sm-5" asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" asp-for="UserName"></label>

                <div class="col-sm-9 validation-message">
                    <input type="text" class="col-xs-10 col-sm-5" asp-for="UserName" />
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>



            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" asp-for="PhoneNumber"></label>

                <div class="col-sm-9 validation-message">
                    <input type="number" class="col-xs-10 col-sm-5" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Submit
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <a href="/sellers" class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </a>
                </div>
            </div>


            <input asp-for="Id" type="hidden" />
        </form>
    </div><!-- /.col -->
</div><!-- /.row -->



@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
